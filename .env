# ============================================
# CONFIGURACION DE GYMUNITY
# ============================================

# Base de datos PostgreSQL
POSTGRES_DB=gymunity
POSTGRES_USER=gymunity
POSTGRES_PASSWORD=gymunity

# Backend Spring Boot
DB_URL=jdbc:postgresql://db:5432/gymunity
DB_USERNAME=gymunity
DB_PASSWORD=gymunity
DB_DRIVER=org.postgresql.Driver
DB_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# Server
SERVER_PORT=8080

# Hibernate DDL
# LOCAL:  DDL_AUTO=update + SQL_INIT_MODE=always (persiste datos, ejecuta SQL con ON CONFLICT)
# PROD:   DDL_AUTO=update + SQL_INIT_MODE=never (mantiene datos, no ejecuta SQL)
DDL_AUTO=update
SQL_INIT_MODE=always

# Frontend
BACKEND_URL=http://backend:8080
FRONTEND_PORT=80
