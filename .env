# ============================================
# CONFIGURACIÓN DE GYMUNITY
# ============================================

# Base de datos PostgreSQL
POSTGRES_DB=gymunity
POSTGRES_USER=gymunity
POSTGRES_PASSWORD=gymunity

# Backend Spring Boot
DB_URL=jdbc:postgresql://db:5432/gymunity
DB_USERNAME=gymunity
DB_PASSWORD=gymunity
DB_DRIVER=org.postgresql.Driver
DB_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# JWT
JWT_SECRET=5d8f7a9e4c6b3a1f8e7d4c6b3a1f8e7d4c6b3a1f8e7d4c6b3a1f8e7d4c6b3a1f
JWT_EXPIRATION=86400000

# Server
SERVER_PORT=8080

# Hibernate DDL (create = borra datos, update = persiste datos, none = sin cambios)
# PRIMERA VEZ: usar "create" para crear las tablas
# DESPUÉS: cambiar a "update" para persistir datos
DDL_AUTO=update
SQL_INIT_MODE=never

# Frontend
BACKEND_URL=http://backend:8080
FRONTEND_PORT=80
