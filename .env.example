# ============================================
# CONFIGURACIÓN DE GYMUNITY (EJEMPLO)
# ============================================
# Copia este archivo como .env y configura los valores

# Base de datos PostgreSQL
POSTGRES_DB=gymunity
POSTGRES_USER=gymunity
POSTGRES_PASSWORD=TU_PASSWORD_SEGURO

# Backend Spring Boot
DB_URL=jdbc:postgresql://db:5432/gymunity
DB_USERNAME=gymunity
DB_PASSWORD=TU_PASSWORD_SEGURO
DB_DRIVER=org.postgresql.Driver
DB_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# JWT (genera una clave segura de 64 caracteres hex)
JWT_SECRET=TU_CLAVE_JWT_SEGURA_DE_64_CARACTERES
JWT_EXPIRATION=86400000

# Server
SERVER_PORT=8080

# Hibernate DDL
# - create: Borra y recrea tablas (solo desarrollo)
# - update: Actualiza esquema sin borrar datos (producción)
# - none: No modifica esquema
DDL_AUTO=update

# SQL Init Mode (always = ejecuta data.sql, never = no ejecuta)
SQL_INIT_MODE=never

# Frontend
BACKEND_URL=http://backend:8080
FRONTEND_PORT=80
