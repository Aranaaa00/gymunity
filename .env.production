# ============================================
# CONFIGURACIÓN DE GYMUNITY - PRODUCCIÓN (Digital Ocean)
# ============================================

# Base de datos PostgreSQL (usar valores de Digital Ocean)
POSTGRES_DB=gymunity
POSTGRES_USER=gymunity
POSTGRES_PASSWORD=CAMBIAR_POR_PASSWORD_SEGURO

# Backend Spring Boot
DB_URL=jdbc:postgresql://db:5432/gymunity
DB_USERNAME=gymunity
DB_PASSWORD=CAMBIAR_POR_PASSWORD_SEGURO
DB_DRIVER=org.postgresql.Driver
DB_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# JWT (CAMBIAR por una clave segura de 64 caracteres)
JWT_SECRET=CAMBIAR_POR_CLAVE_JWT_SEGURA_DE_64_CARACTERES_HEXADECIMALES
JWT_EXPIRATION=86400000

# Server
SERVER_PORT=8080

# Hibernate DDL
# - update: Mantiene datos existentes, actualiza esquema
# - none: No modifica esquema (más seguro en producción)
DDL_AUTO=update

# SQL Init Mode
# - always: Ejecuta data.sql en cada inicio (CUIDADO: puede duplicar datos)
# - never: No ejecuta data.sql (recomendado para producción)
SQL_INIT_MODE=never

# Frontend
BACKEND_URL=http://backend:8080
FRONTEND_PORT=80
